<Window x:Class="WpfApp1.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер" Height="600" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="ТУРЫ" FontSize="24" Margin="10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Обновить" Click="BtnRefresh_Click" Width="80" Margin="5"/>
            <Button Content="Выйти" Click="BtnLogout_Click" Width="80" Margin="5"/>
        </StackPanel>

        <!-- Таблица туров -->
        <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="True" SelectionChanged="dataGrid_SelectionChanged"/>
    </Grid>
</Window>